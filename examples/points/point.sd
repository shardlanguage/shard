// Define a namespace to avoid name conflicts and to organize the program
namespace pt {

// Structure representing a point
struct Point {
    var x: i32;
    var y: i32;
    var name: *i8;
}

// Function for creating a new point
func create(var x: i32, var y: i32, var name: *i8) -> pt::Point {
    var p: pt::Point;

    p.x = x;
    p.y = y;
    p.name = name;

    return p;
}

// Function for moving an existing point to a new position
func move(var p: *pt::Point, var new_x: i32, var new_y: i32) {
    p[0].x = new_x;
    p[0].y = new_y;
}

}